<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
    <info organisation="net.solarnetwork.common" module="${bundle.name}" />
	<configurations defaultconf="compile,runtime">
		<conf name="compile" visibility="public" description="Build dependencies"/>
		<conf name="runtime" visibility="public" description="Runtime dependencies"/>
		<conf name="sources"/>
	</configurations>
	<publications>
		<artifact type="pom" ext="pom"/>
		<artifact type="bundle" ext="jar"/>
		<artifact type="sources" ext="jar" conf="sources" m:classifier="sources"/>
	</publications>
	<dependencies defaultconfmapping="runtime->default(runtime);compile->default(runtime)">
		<!-- Logging -->
    	<dependency org="log4j" name="log4j" rev="1.2.17" conf="runtime"/>
		<dependency org="org.slf4j" name="slf4j-api" rev="1.7.24"/>
		<dependency org="org.slf4j" name="slf4j-log4j12" rev="1.7.24" conf="runtime"/>
		<dependency org="org.slf4j" name="jcl-over-slf4j" rev="1.7.24" conf="runtime"/>
		<dependency org="org.slf4j" name="osgi-over-slf4j" rev="1.7.24" conf="runtime"/>

		<!-- OSGi -->
		<dependency org="org.osgi" name="org.osgi.core" rev="5.0.0"/>
		<dependency org="org.osgi" name="org.osgi.enterprise" rev="4.2.0"/>

		<!-- Joda -->
		<dependency org="joda-time" name="joda-time" rev="2.9.7"/>
		
		<!-- JSON -->
		<dependency org="com.fasterxml.jackson.core" name="jackson-annotations" rev="2.8.7"/>
		<dependency org="com.fasterxml.jackson.core" name="jackson-databind" rev="2.8.7"/>
		<dependency org="com.fasterxml.jackson.datatype" name="jackson-datatype-joda" rev="2.8.7"/>

		<!-- Spring -->		
    	<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-context" rev="4.2.9.RELEASE_1"/>
    	<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-messaging" rev="4.2.9.RELEASE_1"/>
    	<dependency org="org.apache.servicemix.bundles" name="org.apache.servicemix.bundles.spring-test" rev="4.2.9.RELEASE_1"/>

		<!-- JUnit -->
		<dependency org="junit" name="junit" rev="4.12"/>

		<!-- Other -->
		<dependency org="commons-beanutils" name="commons-beanutils" rev="1.8.3"/>
		<dependency org="org.eclipse.virgo.mirrored" name="org.apache.commons.codec" rev="1.10.0"/>
		<dependency org="org.apache.tomcat" name="tomcat-jdbc" rev="7.0.29" conf="compile"/>
		
		<!-- SolarNetwork -->
		<dependency org="net.solarnetwork.common" name="net.solarnetwork.common" rev="1.34.1"/>
    </dependencies>
</ivy-module>